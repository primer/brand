{
    "name": "Primer Brand",
    "image": "mcr.microsoft.com/vscode/devcontainers/typescript-node:18",
    "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
    ],
    "forwardPorts": [
        8000,
        6006
    ],
    "postCreateCommand": [
        "/bin/bash",
        "-c",
        "pushd apps/docs && npm install --legacy-peer-deps && popd && npm install"
    ],
    "remoteUser": "node"
}