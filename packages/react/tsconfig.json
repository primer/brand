{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "emitDeclarationOnly": false,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "jsx": "react-jsx",
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "resolveJsonModule": true,
    "types": ["node", "react", "react-dom", "chai"]
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["integration-tests/**/*"]
}
