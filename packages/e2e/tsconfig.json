{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "allowJs": true,
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "emitDeclarationOnly": false,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "jsx": "react-jsx",
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "scripts/**/*", "docs/**/*"],
  "exclude": ["integration-tests/**/*", "node_modules", "../../node_modules"]
}
